<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FeedbackActivity"
    android:background="@drawable/app_background"
    android:orientation="vertical" >
     
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:textColor="#33A4B4"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_marginBottom="0dp" />
    
            

        <EditText
            android:id="@+id/editText_feedback_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_box_white"
            android:hint="Name"
            android:padding="5dp" />
        
        <EditText
            android:id="@+id/editText_feedback_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_box_white"
            android:hint="Email"
            android:padding="5dp" />
        
        <EditText
            android:id="@+id/editText_feedback_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_box_white"
            android:hint="Phone Number"
            android:padding="5dp" />
        
        <EditText
            android:id="@+id/editText_feedback_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_box_white"
            android:hint="Message Subject"
            android:padding="5dp" />
        
        <EditText
	        android:id="@+id/editText_feedback_message"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@drawable/edit_text_box_white"
	        android:ems="10"
	        android:gravity="start"
	        android:hint="Message"
	        android:layout_marginTop="5dp"
	        android:layout_marginBottom="10dp"
	        android:inputType="textMultiLine"
	        android:padding="5dp" >
	    </EditText>
	        
    <Button
        android:id="@+id/button_feedback_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Message"
        style="@style/CustomButtonStyle" />
    
</LinearLayout>
